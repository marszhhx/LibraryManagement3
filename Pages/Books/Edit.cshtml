@page
@model LibraryManagement3.Pages.Books.EditModel

@{
    ViewData["Title"] = "Edit";
}

<section class="mb-4">
    <div class="card">
        <div class="card-header text-center py-3">
            <h5 class="mb-0 text-center">
                <strong>Edit Book</strong>
            </h5>
        </div>
        <div class="card-body">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Book.BookId" />
                    <div class="form-group">
                        <label asp-for="Book.Title" class="control-label"></label>
                        <input asp-for="Book.Title" class="form-control" />
                        <span asp-validation-for="Book.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Book.AuthorId" class="control-label"></label>
                        <input asp-for="Book.AuthorId" class="form-control" />
                        <span asp-validation-for="Book.AuthorId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Book.LibraryBranchId" class="control-label"></label>
                        <input asp-for="Book.LibraryBranchId" class="form-control" />
                        <span asp-validation-for="Book.LibraryBranchId" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Save" class="btn btn-primary"/>
                        <hr/>
                        <a asp-page="./Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
